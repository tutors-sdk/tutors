{
  "task.allowAutomaticTasks": "on",
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.requireConfig": true,
  "prettier.useEditorConfig": false,
  "files.exclude": {
    "**/*.js": {
      "when": "$(basename).ts"
    },
    "**/*.js.map": true,
    "**/*.d.ts": true,
    "**/node_modules": true,
    "**/.turbo": true,
    "**/dist": true,
    "**/*.tsbuildinfo": true,
    "**/package-lock.json": true,
    "**/.github": true
  }
}