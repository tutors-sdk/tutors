{
  "task.allowAutomaticTasks": "on",
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.requireConfig": true,
  "prettier.useEditorConfig": false,
  "deno.enable": true,
  "deno.lint": true,
  "deno.unstable": false,
  "deno.testing.args": [
    "--allow-read",
    "--allow-write",
    "--allow-run",
    "--allow-env",
    "--allow-sys",
    "--allow-net",
    "--no-check"
  ],
  "files.exclude": {
    "**/*.js": {
      "when": "$(basename).ts"
    },
    "**/*.js.map": true,
    "**/*.d.ts": true,
    "**/node_modules": true,
    "**/.turbo": true,
    "**/dist": true,
    "**/*.tsbuildinfo": true,
    "**/package-lock.json": true,
    "**/.github": true
  }
}