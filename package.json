{
  "name": "tutors",
  "repository": "https://github.com/tutors-sdk/tutors.git",
  "author": "Jordan Harrison <contact@jordanharrison.ie>",
  "license": "MIT",
  "version": "0.2.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "components/*",
    "sites/*"
  ],
  "scripts": {
    "build": "npm run clean && turbo run build",
    "dev": "turbo run dev --parallel",
    "reader": "turbo run dev --filter tutors-course-reader",
    "time": "turbo run dev --filter tutors-time-reader",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "eslint": "^8.24.0",
    "husky": "^8.0.1",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "prettier-plugin-svelte": "^2.7.0",
    "turbo": "latest",
    "typescript": "4.8.3"
  }
  }  