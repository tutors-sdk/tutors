{
  "private": true,
  "workspaces": [
    "apps/*",
    "cli/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "course": "turbo run dev --filter tutors-course",
    "home": "turbo run dev --filter tutors-home",
    "time": "turbo run dev --filter tutors-time",
    "lint": "turbo run lint",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "eslint-config-custom": "*",
    "prettier": "^2.7.1",
    "prettier-plugin-svelte": "^2.7.0",
    "turbo": "latest"
  },
  "packageManager": "npm@8.19.2"
}
