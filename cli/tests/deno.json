{
  "imports": {
    "@std/assert": "jsr:@std/assert@^1",
    "@std/testing": "jsr:@std/testing@^1",
    "@std/html": "jsr:@std/html@^1",
    "@std/fs": "jsr:@std/fs@^1",
    "zod": "npm:zod@^3.23",
    "deno-dom": "jsr:@b-fuze/deno-dom@^0.1"
  },
  "tasks": {
    "test": "deno test --allow-all --parallel",
    "test:sequential": "deno test --allow-all",
    "test:watch": "deno test --allow-all --watch",
    "test:critical": "deno test --allow-all critical_paths/",
    "test:edge": "deno test --allow-all edge_cases/",
    "test:regression": "deno test --allow-all regression/",
    "test:integration": "deno test --allow-all integration/",
    "test:coverage": "deno test --allow-all --coverage=./cov_profile",
    "coverage:report": "deno coverage cov_profile --lcov --output=coverage.lcov",
    "coverage:html": "deno coverage cov_profile --html",
    "bench": "deno bench --allow-all",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "lint": "deno lint"
  },
  "exclude": [
    "fixtures/",
    "test-output/",
    "cov_profile/"
  ]
}
